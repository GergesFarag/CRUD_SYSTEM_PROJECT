<div
        id="sidebarId"
        class="position-relative d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar"
      >
        <span style="right: 10px; top: 18px" class="position-absolute">
          <button class="btn p-1 me-2" onclick="toggleSidebar()">
            <i class="bi bi-x-circle"></i>
          </button>
        </span>

        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
        >
          <i class="bi bi-archive"></i>
          <span class="fs-4 sidebar-text mt-1">CRUD System</span>
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/dashboard" class="nav-link text-white <%= currentPage == "dashboard" ? "active" : "" %>" aria-current="page">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#home" />
              </svg>
              <span class="sidebar-text"> Home </span>
            </a>
          </li>

          <li>
            <a href="/customer/add" class="nav-link text-white <%= currentPage == "add" ? "active" : "" %>">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#people-circle" />
              </svg>
              <span class="sidebar-text"> Add Customers </span>
            </a>
          </li>
        </ul>
        <hr />
        <div class="dropdown">
          <a
            href="#"
            class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="/img/logo.png"
              alt=""
              width="32"
              height="32"
              class="rounded-circle me-2"
            />
            <strong class="sidebar-text"><%= user.username %></strong>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="#">New project...</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="/signout">Sign out</a></li>
          </ul>
        </div>
      </div>
      <div class="b-example-divider b-example-vr"></div>